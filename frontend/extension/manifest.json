{
  "manifest_version": 3,
  "name": "Chatbot Widget",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "tabs","webRequest", "browsingData", "storage", "downloads"],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.uwhealth.org/*"], //The plugin is only shown on the site bilibili
      "js": ["scripts/html2canvas.min.js","scripts/content.js"],
      "css": ["scripts/page1.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/AIPhoto.png",
    "48": "images/AIPhoto.png",
    "128": "images/AIPhoto.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/AIPhoto.png", "scripts/page1.css", "images/*", "scripts/html2canvas.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}

