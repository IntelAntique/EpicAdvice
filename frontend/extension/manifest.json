{
  "manifest_version": 3,
  "name": "Chatbot Widget",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "tabs","webRequest", "browsingData"],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.uwhealth.org/*"], //The plugin is only shown on the site bilibili
      "js": ["scripts/content.js"],
      "css": ["scripts/page1.css"]
    }
  ],
  "icons": {
    "16": "images/AIPhoto.png",
    "48": "images/AIPhoto.png",
    "128": "images/AIPhoto.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/AIPhoto.png"],
      "matches": ["<all_urls>"]
    }
  ]
}

